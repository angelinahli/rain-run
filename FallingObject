/**
 * FILENAME: FallingObject
 * DESCRIPTION: CS230 Final Project - Rain Run Game
 * @author Mara Steiu
 */

import java.awt.*;
import java.util.*;

public class FallingObject{
  
  //instance variables
  protected int xPos, yPos, size, speed;
  protected final int leftEdge, rightEdge, topEdge, bottomEdge;

  //constructor
  public FallingObject(int x, int y, int si, int sp){
    this.xPos = x;
    this.yPos = y;
    this.size = si;
    this.speed = sp;
    this.leftEdge = RainRunPanel.BORDER;
    this.rightEdge = RainRunPanel.WIDTH - size - RainRunPanel.BORDER;
    //top, bottom?
  }
  
  //objects falling at a constant pace 
  public void fall(){
    this.xPos -= 10; //falling down vertically
  }
  
  //make object apear on screen, at a random x position, on a constant y position (top of screen)
  public void spawn(){
    randomNum = leftEdge + (int)(Math.random() * rightEdge); 
    this.xPos = randomNum;
    this.yPos = topEdge;
  }
  
  //getters
  public String getType() {
    return "fallingobject";
  }
  
  public int getX() {
    return xPos;
  }
  
  public int getY() {
    return yPos;
  } 
  
}
